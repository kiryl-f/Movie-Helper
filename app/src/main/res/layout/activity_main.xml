<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="?attr/bgColor"
    android:theme="@style/AppTheme"
    tools:context=".MainActivity">

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:backgroundTint="?attr/tbColor"
        app:itemRippleColor="@android:color/white"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/bottom_nav_menu"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:indeterminate="true"
        android:layout_centerInParent="true"/>

    <com.wenchao.cardstack.CardStack
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipeStack"
        app:card_stack_size="3"
        android:gravity="center"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/RL"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        />

    <View
        android:id="@+id/descriptionView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:elevation="50dp"
        />
    <RelativeLayout
        android:id="@+id/RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNav"
        android:layout_marginBottom="8dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/stroke_bg"
        >
        <ImageView
            android:id="@+id/undoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_undo_transparent_24"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/thumbUpImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumb_up"
            android:layout_toEndOf="@id/eyeImageView"
            android:layout_marginStart="45dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/thumbDownImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumb_down"
            android:layout_marginEnd="45dp"
            android:layout_toStartOf="@id/eyeImageView"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/eyeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_downward_24"
        android:layout_above="@id/bottomNav"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/filmImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_local_movies_24"
        android:elevation="20dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/filmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="?attr/eyeColor"
        android:text="@string/find_movies"
        android:visibility="invisible"
        android:layout_below="@id/filmImage"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/willWatchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#12FB29"
        android:text="@string/will_watch"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="55dp"
        android:visibility="invisible"
        android:background="@drawable/green_stroke"
        />
    <TextView
        android:id="@+id/skipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="28sp"
        android:background="@drawable/red_stroke"
        android:text="@string/skip"
        android:layout_marginTop="55dp"
        android:layout_marginStart="40dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/alreadyWatchedTextView"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#114CFA"
        android:text="@string/watched"
        android:textSize="28sp"
        android:background="@drawable/blue_stroke"
        android:layout_above="@id/RL"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="55dp"/>

    <View
        android:id="@+id/filterView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/bottomNav"
        android:layout_below="@id/RL"
        android:layout_centerInParent="true"
        />
    <View
        android:id="@+id/nextToWatchView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/bottomNav"
        android:layout_below="@id/RL"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"/>
</RelativeLayout>