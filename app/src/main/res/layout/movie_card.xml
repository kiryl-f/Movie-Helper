<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageViewRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    android:layout_marginBottom="80dp"
    android:layout_marginTop="45dp"
    android:background="@drawable/movie_card_bg"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:textSize="21sp"
        tools:text="8.0"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_above="@id/textViewsRL"
        tools:ignore="ContentDescription" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:id="@+id/textViewsRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/textViewsRL"
        android:layout_alignEnd="@id/textViewsRL"
        >
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Forrest Gump"
            android:textColor="?attr/textColor"
            android:gravity="center"
            android:textSize="30sp"

            />
        <TextView
            android:id="@+id/yearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            tools:text="1994"
            android:textColor="?attr/textColor"
            android:layout_below="@id/titleTextView"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/genreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Drama, Romance"
            android:layout_below="@id/yearTextView"
            android:textColor="?attr/textColor"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            />
    </RelativeLayout>
</RelativeLayout>