<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="LightTheme">
        <item name="bgColor">#ffffff</item>
        <item name="textColor">#ffffff</item>
        <item name="cardColor">#000000</item>
        <item name="eyeColor">#000000</item>
        <item name="tbColor">#000000</item>
        <item name="listViewTextColor">#000000</item>
    </style>

    <style name="DarkTheme">
        <item name="bgColor">#000000</item>
        <item name="textColor">#000000</item>
        <item name="cardColor">#69779b</item>
        <item name="eyeColor">#ffffff</item>
        <item name="tbColor">#1f1a24</item>
        <item name="listViewTextColor">#ffffff</item>
    </style>
</resources>